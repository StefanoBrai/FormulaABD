@using FormulaABD.ViewModels
@model CreateRisultatoVM
@{
    ViewData["Title"] = "Nuovo Risultato";
}

<h1>Crea Risultato</h1>

<form method="post" asp-action="Create">

    <div class="form-group">
        <label asp-for="PilotaId">Pilota</label>
        <select asp-for="PilotaId" class="form-control" asp-items="Model.Piloti">
            <option value="">-- Seleziona un Pilota --</option>
        </select>
        <span asp-validation-for="PilotaId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TracciatoId">Tracciato</label>
        <select asp-for="TracciatoId" class="form-control" asp-items="Model.Tracciati">
            <option value="">-- Seleziona un Tracciato --</option>
        </select>
        <span asp-validation-for="TracciatoId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TempoGiro">Tempo Giro</label>
        <input asp-for="TempoGiro" class="form-control" placeholder="Enter Tempo Giro">
        <span asp-validation-for="TempoGiro" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </div>

</form>